root = true

[*]
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
charset = utf-8

[*.{js,json,es6}]
indent_style = space
indent_size = 2

[*.html]
indent_size = 2

[*.scss]
indent_size = 2

[*.py]
max_line_length = 119

[Makefile]
indent_style = tab
